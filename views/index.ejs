            <div class="form-row">
                <form name="myForm" ng-show="last_job_status=='Completed'">
                    <div class="col-md-3 mb-3">
                        <label for="validationServer05">Token</label>
                        <input type="number" class="form-control is-invalid" id="validationServer05" placeholder="Token" ng-model="token" required>
                        <div class="invalid-feedback">
                            Get token <a href="https://tableautest.compass-group.com.au/#/views/FlightManifest/FlightManifest">here</a>
                        </div>
                        <div role="alert">
                            <span class="error" ng-show="myForm.input.$error.required">
                                Required!</span>
                            <span class="error" ng-show="myForm.input.$error.number">
                                Not valid number!</span>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="validationServer03">Date</label>
                        <input type="date" class="form-control" uib-datepicker-popup ng-model="dt" is-open="popup2.opened" min-date="minDate" max-date="maxDate" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" close-text="Close" />
                    </div>
                    <div class="col-md-3 mb-3">
                        <!-- <label for="validationServer03"></label> -->
                        <button type="submit" class="btn btn-primary" ng-click="chooseDate()" id="btnClear">Submit</button> 
                    </div>
                </form>
                <p ng-show="last_job_status !='Completed'" id="job_status"><img src="https://media.giphy.com/media/xT39D3pHl63aiQh2De/giphy.gif" width="20%" height="20%"> Job Status: {{last_job_status}}</p>
            </div>
        </div>
    </div>
</body>
